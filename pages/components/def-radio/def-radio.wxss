.def_radio {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.radio_item {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
}
.activeClass {
  background-color: #009943;
}
.out_circle {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  position: relative;
  margin-right: 16rpx;
  border: 2rpx solid #bbb;
}

.in_circle {
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}